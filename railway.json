{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {},
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT --timeout 300 --workers 1 --max-requests 1000 --preload --access-logfile '-' --error-logfile '-' --log-level info",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE"
  }
}
